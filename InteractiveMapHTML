<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
   integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
   crossorigin=""/>
   <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
   integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
   crossorigin=""></script>

</head>
<body>
    <div id="map"></div>
    <script>
        const d = new Date();
        let dOpened = d.getDay();
        let mOpened = d.getMonth();

		var map = L.map('map', {
    crs: L.CRS.Simple
});
var bounds = [[0,0], [480.0,682.5]];
var image = L.imageOverlay('https://i.ibb.co/HzJzgCp/LIA-Map-In-Season-34-125x24-2023-1.png', bounds).addTo(map);
map.fitBounds(bounds);

        var marker = L.marker([51.5, -0.09]).addTo(map);

        var circle = L.circle([51.508, -0.11], {
            color: 'red',
            fillColor: '#f03',
            fillOpacity: 0.5,
            radius: 500
        }).addTo(map);
        
        var polygon = L.polygon([
    		[0, 0],
    		[1,1],
    		[-1,-1]
		]).addTo(map);
        
        marker.bindPopup("<b>Main Entrance</b><br>Welcome to the Long Island Aquarium!").openPopup();

        circle.bindPopup("<b>Lost City of Atlantis Shark Exhibit</b><br>Shark Tank Talk (Feed M Th Sa) 3:00")

        //Changes text under "snorkel tank" to what would be available during that week
        let mSnorkelTxt = "($) Mermaid Snorkels @";
        let pSnorkelTxt = "($) Pirate Snorkels @";
        let snorkelTxt = "($) Snorkel Adventures @";
        let snorkelDTxt= " 10:30, 11:45, 1:30, 2:45";
        let snorkelWTxt= ", 4:00";
        let totalSnorkTxt = "";

        if (mOpened>= 6 && mOpened<=7){
            if(dOpened == 2){
                totalSnorkTxt = snorkelTxt+snorkelDTxt;
            }
            else if(dOpened == 0|| dOpened == 6){
                totalSnorkTxt = snorkelTxt+snorkelDTxt+snorkelWTxt;
            }
            else if (dOpened == 4){
                totalSnorkTxt = pSnorkelTxt+snorkelDTxt;
            }
            else{
                totalSnorkTxt = mSnorkelTxt+snorkelDTxt;
            }
        }
        else{
            totalSnorkTxt = "Closed for the season."
        }

        polygon.bindPopup("<b>Shark Reef Lagoon</b><br>"+totalSnorkTxt);


    </script>
       
    <style>
        #map {height: 1280px}
    </style>
</body>

